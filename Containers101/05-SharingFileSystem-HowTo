mkdir share
cd share
ls
echo "Hello from the outside" > file.txt
cat file.txt
pwd
ls
docker run -it ubuntu
docker run -v $(pwd):/sharedfolder -it ubuntu
cd sharedfolder
ls
cat file.txt
echo "Hello from the inside" >> file.txt
ls
cat file.txt
exit
ls
cat file.txt 
